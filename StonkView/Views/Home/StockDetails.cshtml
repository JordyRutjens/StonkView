@{
    ViewData["Title"] = "StockDetails";
    StonkView.Controllers.LoadController.LoadStocks();
}


<br />
<div class="text-center">
    <h1 class="display-4">@StonkView.Data.Stock.name</h1>
</div>

<table class="table table-striped th-lg">
    <thead>
        <tr>
            <th>
                Ticker
            </th>
            <th>
                Sector
            </th>
            <th>
                Full Time Employees
            </th>
            <th>
                52 Week High
            </th>
            <th>
                52 Week Low
            </th>
            <th>
                50 Day Moving Average
            </th>
            <th>
                EPS
            </th>
            <th>
                Market Capitalization
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="color:dodgerblue">
                @StonkView.Data.Stock.ticker
            </td>
            <td>
                @StonkView.Data.Stock.industry
            </td>
            <td>
                @StonkView.Data.Stock.fulltimeemployees
            </td>
            <td style="color:green">
                @StonkView.Data.Stock.high52
            </td>
            <td style="color:red">
                @StonkView.Data.Stock.low52
            </td>
            <td style="color:darkgoldenrod">
                @StonkView.Data.Stock.movingAverage50
            </td>
            <td style="color:darkgoldenrod">
                @StonkView.Data.Stock.eps
            </td>
            <td>
                @StonkView.Data.Stock.marketCapitalization
            </td>
        </tr>
    </tbody>
</table>
<hr />

<table class="table table-striped th-lg">
    <thead>
        <tr>
            <th>
                Profit Margin
            </th>
            <th>
                Divident Yield
            </th>
            <th>
                Divident Date
            </th>
            <th>
                Latest Quarter
            </th>
            <th>
                Quarterly Earnings Growth YoY
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="color:deepskyblue">
                @StonkView.Data.Stock.profitmargin
            </td>
            <td style="color:green">
                @StonkView.Data.Stock.dividentYield
            </td>
            <td>
                @StonkView.Data.Stock.dividentDate
            </td>
            <td>
                @StonkView.Data.Stock.latestQuarter
            </td>
            <td style="color:deepskyblue">
                @StonkView.Data.Stock.quarterlyEarningsGrowthYOY
            </td>
        </tr>
    </tbody>
</table>

<hr />
<p class="text-body text-center">@StonkView.Data.Stock.description</p>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <a asp-action="Stocks" class="btn">Return</a>
            <button type="button" id="loadGraph" class="btn" onclick="" data-toggle="modal" data-target="#GraphModal">Graph</button>
        </div>
    </div>
</div>

<div id="GraphModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="background-color: #FFFBD0">
            <div class="modal-header">
                <p class="modal-title">@StonkView.Data.Stock.name</p>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="chart"></div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<script src="~/js/stockchart.js"></script>
<script type="text/javascript">
    var button = document.getElementById("loadGraph");

    button.addEventListener('click', function () {
        var chart = new StockChart();
        chart.element = document.getElementById('chart');
        chart.key = 'QEEUW4RQQ3JJFSF2';
        chart.ticker = 'TSLA';
        chart.style.width = '100%';
        chart.style.height = '420px';
        chart.draw();
    });
</script>
